<p id="notice"><%= notice %></p>

<h1>Lista pinów</h1>

<table>
  <thead>
    <tr>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= link_to 'Pokaż', pin, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edytuj', edit_pin_path(pin), class: "btn btn-success" %></td>
        <td><%= link_to 'Usuń', pin, class: "btn btn-danger", method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy pin', new_pin_path, class: "btn btn-info" %>
